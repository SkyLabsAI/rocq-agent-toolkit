(* ATD schema for task output in the Rocq pipeline *)

type task_status = [ Success | Failure ]

type failure_reason = [
  | Timeout
  | ProofVerificationFailed
  | MaxLLMCallsReached
  | ExecutionError
  | Other of string
]

type model_info = {
  model_name: string;
  model_config: (string * string) list <python repr="dict">; (* key-value pairs for model configuration *)
}

type code_info = {
  git_repo: string;
  git_sha: string;
  file_path: string;
  class_name: string;
  start_line: int;
}

type agent_metadata = {
  code_info: code_info;
  sub_agents: agent_metadata list;
  model_info: model_info option;
}

type token_counts = {
  input_tokens: int;
  output_tokens: int;
  total_tokens: int;
}

type resource_usage = {
  execution_time_sec: float;
  cpu_time_sec: float;
  gpu_time_sec: float;
}

type metrics = {
  llm_invocation_count: int;
  token_counts: token_counts;
  resource_usage: resource_usage;
}

type proof_outputs = {
  generated_proof: string;
}

type task_output = {
  run_id: string;
  task_id: string;
  trace_id: string option;
  timestamp_utc: string; (* ISO 8601 format *)
  agent_metadata: agent_metadata;
  status: task_status;
  failure_reason: failure_reason option;
  metrics: metrics option;
  outputs: proof_outputs;
}
