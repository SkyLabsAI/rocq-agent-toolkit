{
  "name": "playwright-test-scripts",
  "description": "Test automation scripts for Rocq Agent Toolkit",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:dashboard": "playwright test dashboard",
    "test:modal": "playwright test taskModal",
    "test:integration": "playwright test integration",
    "test:accessibility": "playwright test accessibility",
    "test:a11y": "playwright test --grep='a11y|accessibility'",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile",
    "test:ci": "playwright test --reporter=html,json,junit",
    "test:changed": "playwright test --only-changed",
    "test:report": "playwright show-report",
    "test:install": "playwright install --with-deps",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:trace": "playwright test --trace=on",
    "test:coverage": "playwright test --reporter=html --output-dir=test-results",
    "test:parallel": "playwright test --workers=4",
    "test:serial": "playwright test --workers=1",
    "lint:tests": "eslint tests/**/*.ts",
    "format:tests": "prettier --write tests/**/*.ts",
    "clean:test-results": "rm -rf test-results playwright-report",
    "test:setup": "npm run test:install && npm run test",
    "test:full": "npm run clean:test-results && npm run test:ci && npm run test:report"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  }
}